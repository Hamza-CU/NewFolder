<html>
  <head>
    <link href='https://fonts.googleapis.com/css?family=Ubuntu' rel='stylesheet'>
    <style>

      body {
        background-color: rgb(51, 51, 51);
        font-family: 'Ubuntu';
        font-size: 22px;
      }
      .sidebar {
          height: 100%;
          width: 160px;
          position: fixed;
          z-index: 1;
          top: 50px;
          left: 0;
          background-color: rgb(38, 38, 38);
          overflow-x: hidden;
          padding-top: 0px;
      }
      .toptext {
        padding-left: 160px;
      }
      .banner {
        text-align: center;
        color:white;
      }

      ul {
          list-style-type: none;
          margin: 0;
          padding: 0;
          width: 200px;
          background-color: #f1f1f1;
      }

      li a {
          display: block;
          color: #000;
          padding: 8px 16px;
          text-decoration: none;
      }

      /* Change the link color on hover */

      li a:hover {
          background-color: #555;
          color: white;
      }

      .login {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
        padding-left: 200px;
      }

      .register {
        margin-left: auto;
        margin-right: auto;
        width: 100%;
        padding-left: 200px;
      }

      .username input[type=username] {

        width: 30%;
        padding: 12px 20px;
        padding-left: 1200px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
      }

      .password input[type=password] {
        width: 30%;
        padding: 12px 20px;
        padding-left: 120px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
      }

      .email input[type=email] {
        width: 30%;
        padding: 12px 20px;
        padding-left: 120px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
      }

      .confirmPassword input[type=confirmPassword] {
        width: 30%;
        padding: 12px 20px;
        padding-left: 120px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
      }

    </style>

    <title>Connect 4</title>
  </head>

  <body>

    <div class="banner">
      <h1>Connect 4 Game</h1>
    </div>
    <div class="sidebar">
      <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/login">Login</a></li>
          <li><a href="/register">Register</a></li>
          <li><a href="/profile">Profile</a></li>
          <li><a href="/friends">Friends</a></li>
          <li><a href="/spectate">Spectate</a></li>

      </ul>

    </div>
    <form class="register" method = "POST" action = "/register">
      <h3>Register</h3>
      <label for="username"><b>Username</b></label> <br>
      <input type="text" id="username" placeholder="Enter Username" name="username" required>
      <br>
      <label for="email"><b>Email</b></label><br>
      <input type="text" id="email" placeholder="Enter a Valid Email Address" name="email" required>
      <br>
      <label for="password"><b>Password</b></label> <br>
      <input type="text" id="password" placeholder="Enter Password" name="password" required>
      <br>
      <label for="password"><b>Confirm Password</b></label> <br>
      <input type="text" id="confirmPassword" placeholder="Confirm Password" name="confirmPassword" required>
      <button type="submit" id="registerButton">Register</button>
    </form>

    <script src="login.js"></script>
  </body>
</html>
